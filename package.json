{
  "name": "@mpc-sdk/tss-snap",
  "version": "0.1.0",
  "description": "Threshold signatures snap for MetaMask.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpc-sdk/tss-snap"
  },
  "license": "MIT",
  "files": [
    "bundle.js",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "start:webpack": "webpack-dev-server --no-client-overlay",
    "build:webpack": "yarn build:snap && yarn build:assets && webpack --config webpack.config.js --node-env production",
    "clean": "rm -rf dist .parcel-cache && mkdir dist",
    "build:snap": "yarn clean && mm-snap build -s snap.js -d . && yarn build:assets",
    "build:assets": "cp -r images dist/ && cp -r snap.manifest.json dist && cp -r bundle.js dist",
    "build": "yarn build:snap && parcel build src/index.html --no-optimize --no-scope-hoist",
    "types": "tsc --noEmit --project tsconfig.json",
    "fmt": "prettier --write . --no-color",
    "lint": "eslint src",
    "start": "yarn build:snap && parcel src/index.html --port 7070"
  },
  "devDependencies": {
    "@metamask/snaps-cli": "3.0.1",
    "@metamask/types": "^1.1.0",
    "@types/node": "20.8.10",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.31.11",
    "ganache": "^7.7.1",
    "parcel": "2.10.2",
    "prettier": "3.0.3",
    "string-replace-loader": "^3.1.0",
    "ts-loader": "^9.2.6",
    "typescript": "5.2.2",
    "webpack": "5.89.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "4.15.1"
  },
  "dependencies": {
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/hash": "^5.7.0",
    "@metamask/detect-provider": "^2.0.0",
    "@reduxjs/toolkit": "^1.9.1",
    "comlink": "^4.3.1",
    "date-fns": "^2.29.3",
    "ethers": "6.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.5.0"
  }
}
