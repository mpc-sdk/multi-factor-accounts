{
  "includes": ["src/**/.tsx?"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2022",
    "lib": ["es2022", "webworker", "dom"],
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "sdk"]
}
